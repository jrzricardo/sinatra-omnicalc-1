<h1>Random Number</h1>

<form action="/random/results">
  <div>
  <label for="min_input">
    Minimum
  </label>
  <input id="min_input" type="text" name="user_min" placeholder="E.g. 3">
  </div>

  <div>
  <label for="max_input">
    Maximum
  </label>
  <input id="max_input" type="text" name="user_max" placeholder="E.g. 30">
  </div>

  <button>Generate random number</button>
</form>
